<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="style.css">
  <title>bookers</title>
</head>
<body>
    <h1>Books</h1>
    <table>
        <thead>
        <tr>
        <th>Title</th>
        <th>Body</th>
        </tr>
        </thead>
        <tbody>
        
        <% @books.each do |book| %>
        <tr>
        <td class="title"><%= book.title %></td>
          
        <td class="body"><%= book.body %></td>
        
        <td>
        <%= link_to "show", book_path(book.id) %>
        </td>
    
        <td>
        <%= link_to "edit", edit_book_path(book.id) %>
        </td>
        
        <td>
        <%= link_to "destroy", book_path(book.id), method: :delete %>
        </td>
        </tr>
        <% end %>
        </tbody>
    </table>
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>
 
    
    
    
    
</body>
</html>