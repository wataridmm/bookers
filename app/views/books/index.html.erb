<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="style.css">
  <title>bookers</title>
</head>
<body>
    <h1>Books</h1>
    <div class=table>
        <% @books.each do |book| %>
        
        <h3 class="title"><%= link_to book.title, book_path(book) %></h3>
        <h3 class="body"><%= link_to book.body %></h3>
        
        <% end %>
        
    </div>
    <h2>New book</h2>
    <%= form_with model:@book, local:true do |f| %>
    <%= f.text_field :title %>
    <h4>Title</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
    <% end %>
    
    
</body>
</html>